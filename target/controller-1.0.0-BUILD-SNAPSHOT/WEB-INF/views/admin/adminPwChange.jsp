<!-- REQUIRED JS SCRIPTS -->

<%@ include file="/WEB-INF/views/admin/includes/common.jsp" %>

<script>

  $(document).ready(function(){

    // 폼태그 안에서 type='submit' 버튼이 동작이 되었을 때
    $("#adminForm").on("submit", function(){

      if($("#changepw").val() != $("#changerepw").val()){
        alert("새비밀번호가 일치하지 않습니다.");
        return false;
      }

      //$("#adminForm").submit();

    });
  });

  let msg = "${msg}";
  if(msg == "changeFail"){
    alert("현재 비밀번호를 확인하세요.");
  }

</script>

</body>
</html>